# Development Environment Configuration
# Used when running: npm run dev

# Backend API URL (local development)
# ⚠️ DO NOT include /api suffix - services append it automatically
# Using network IP for mobile device testing (iPhone/Android on same WiFi)
VITE_API_BASE_URL=http://localhost:3000

# Use mock API (set to 'true' to use mock data instead of real backend)
VITE_USE_MOCK_API=false

# Feature Flags
VITE_ENABLE_UPLOAD=true
VITE_ENABLE_VIDEO_UPLOAD=true
VITE_ENABLE_BULK_OPERATIONS=true

# Debug Settings
VITE_DEBUG_MODE=true
